function d() {
    echo $(dirs -v | fzf | awk '{print $2}')
}
function cdd() {
    local tmp=$(d)
    if [[ $tmp != "" ]] ; then
        eval cd "${tmp/#~/$HOME}"
    fi

}
function fp4WhereOpen() {
    local tmp=$(fp4o)
    if [[ $tmp != "" ]] ; then
        echo $tmp | xargs p4 where | awk '{print $3}'
    fi
}
alias vimOpened="vim \$(fp4WhereOpen)"
alias nvimOpened="nvim \$(fp4WhereOpen)"


function fp4Reopen() {
    if [[ $1 != "" ]] ; then
        p4o | rg -v $1 | awk '{print $1}' | fzf -m | cut -d '#' -f 1 | xargs p4 reopen -c $1
    fi
}

function codew() {
    local tmpFile=/tmp/codew.$$.txt
    touch $tmpFile
    echo "Name Path" >> $tmpFile
    for ws in $(/bin/ls -l ${HOME}/vscodeWorkspace/ | grep ${USER} | awk '{print $9}') ; do
        echo "${ws} ${HOME}/vscodeWorkspace/${ws}" >> $tmpFile
    done

    for ws in $(p4 clients -u ${USER} | awk '{print $2","$5}') ; do
        local client=$(echo $ws | cut -d ',' -f 1 )
        local p=$(echo $ws | cut -d ',' -f 2 )
        if [[ -d $p ]] ; then
            echo "${client} ${p}" >> $tmpFile
        fi

        if [[ -d ${p}/zebu ]] ; then
            echo "${client}_zebu ${p}/zebu" >> $tmpFile
        fi
    done

    local tgt=$(cat $tmpFile |column -t| fzf --header-lines=1 | awk '{print $2}')

    code ${tgt}
    

    rm $tmpFile
    
}
function all_pd() {
    local p=$1
    local i=0
    while [[ $p != "/" ]]
    do
        echo "$i    $p"
        p=$(dirname $p)
        i=$((i+1))
    done
}
function pd() {
    local p=$(pwd $1)
    all_pd $p | fzf | awk '{print $2}'
}
function cdpd() {
    local d=$(pd -P)
    if [[ $d != "" ]] ; then
        cd $d
    fi
}
function tar_cp() {
    local p=$(pwd -P)
    local src=$1
    local tgt=$2
    if [[ $src == "" ]]; then
        echo "no src folder"
        exit 1
    fi
    if [[ $tgt == "" ]]; then
        local f=$(basename $src)
        tgt="${p}/${f}"
    fi
    mkdir -p $tgt
    cd $src
    tar cf - . | (cd $tgt && tar xvf -)
    cd $p
}

# remove the duplicate PATH
function _dedup_env() {
    local arg=$1
    export $arg=$(printf "%s" $(printenv $arg) | awk -v RS=':' '!a[$1]++ { if (NR > 1) printf RS; printf $1}')
}

function dedup_all_env(){
    _dedup_env PATH
    _dedup_env LD_LIBRARY_PATH
    _dedup_env LIBRARY_PATH
    _dedup_env MANPATH
    _dedup_env _LMFILES_
    _dedup_env INFOPATH
    _dedup_env C_INCLUDE_PATH
}
