alias fp4Delta="fp4o | xargs p4_delta"
function d() {
    echo $(dirs -v | fzf | awk '{print $2}')
}
function cdd() {
    local tmp=$(d)
    if [[ $tmp != "" ]] ; then
        eval cd "${tmp/#~/$HOME}"
    fi

}
function fp4WhereOpen() {
    local tmp=$(fp4o)
    if [[ $tmp != "" ]] ; then
        echo $tmp | xargs p4 where | awk '{print $3}'
    fi
}
alias vimOpened="vim \$(fp4WhereOpen)"
alias nvimOpened="nvim \$(fp4WhereOpen)"


function fp4Reopen() {
    if [[ $1 != "" ]] ; then
        p4o | awk '{print $1}' | fzf -m | cut -d '#' -f 1 | xargs p4 reopen -c $1
    fi
}

function codew() {
    local ws=$(ls ~/vscodeWorkspace | fzf)
        if [[ $ws != "" ]] ; then
            code ~/vscodeWorkspace/$ws
        fi
}
function all_pd() {
    local p=$1
    local i=0
    while [[ $p != "/" ]]
    do
        echo "$i    $p"
        p=$(dirname $p)
        i=$((i+1))
    done
}
function pd() {
    local p=$(pwd $1)
    all_pd $p | fzf | awk '{print $2}'
}
function cdpd() {
    local d=$(pd -P)
    if [[ $d != "" ]] ; then
        cd $d
    fi
}
function tar_cp() {
    local p=$(pwd -P)
    local src=$1
    local tgt=$2
    if [[ $src == "" ]]; then
        echo "no src folder"
        exit 1
    fi
    if [[ $tgt == "" ]]; then
        local f=$(basename $src)
        tgt="${p}/${f}"
    fi
    mkdir -p $tgt
    cd $src
    tar cf - . | (cd $tgt && tar xvf -)
    cd $p
}
